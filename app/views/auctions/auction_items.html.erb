
<%if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
<h1>Listing items for Auction: <%= @auction.title %></h1>

<table>
  <thead>
    <tr>
      <th><strong>Picture:</strong></th>
      <th>Title</th>
      <th>Description</th>
      <th>Buyitnow</th>
      <th>Quantity</th>
      <th>Start bid</th>
      <th>Bid increment</th>
      <th>Donation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= image_tag item.picture.url(:thumb) %></td>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= item.buyitnow %></td>
        <td><%= item.qty %></td>
        <td><%= item.start_bid %></td>
        <td><%= item.bid_increment %></td>
        <td><%= item.is_donation %></td>
        <% if item.buyitnow %><td><%= link_to 'Buy this item now', new_bid_path(item: item.id) %></td>
        <% else %>
          <% if item.is_donation %><td><%= link_to 'Make a donation', new_bid_path(item: item.id) %></td>
           <% else %><td><%= link_to 'Bid on this item', new_bid_path(item: item.id) %></td><% end %>
           <% end %>
        <% if @owner %>
          <td><%= link_to 'Edit', edit_item_path(item, auction: item.auction_id) %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if @owner %>
  <%= link_to 'New Item', new_item_path(auction: @auction.id) %>
<% end %>
<%= link_to 'Back', auctions_path %>
