
<%if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
<h1>Listing items for Auction: <%= @auction.title %></h1>

<table>
  <thead>
    <tr>
      <th><strong>Picture:</strong></th>
      <th>Title</th>
      <% if @owner %><th>Order</th><% end %>
      <th>Description</th>
      <th>Buy it now</th>
      <th>Quantity available</th>
      <th>Estimated value</th>
      <th>Start bid</th>
      <th>Bid increment</th>
      <th>Current high bid</th>
      <% if @owner %><th>Donation</th><% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= image_tag item.picture.url(:thumb) %></td>
        <td><%= item.title %></td>
        <% if @owner %><td><%= item.seq %></td><% end %>
        <td><%= item.description %></td>
        <td><%= item.buyitnow %></td>
        <td><%= item.qty %></td>
        <td><%= item.value %></td>
        <td><%= item.start_bid %></td>
        <td><%= item.bid_increment %></td>
        <td><%= item.bids.maximum(:amount) %></td>
        <% if @owner %><td><%= item.is_donation %></td><% end %>
        <% if item.buyitnow  %>
            <% if item.qty > 0 %>
              <td><%= link_to 'Buy this item now', new_bid_path(item: item.id) %></td>
            <% else %>
              <td>SOLD OUT</td>
            <% end %>
        <% else %>
          <% if item.is_donation %><td><%= link_to 'Make a donation', new_bid_path(item: item.id) %></td>
           <% else %><td><%= link_to 'Bid on this item', new_bid_path(item: item.id) %></td><% end %>
           <% end %>
        <% if @owner %>
          <td><%= link_to 'Edit', edit_item_path(item, auction: item.auction_id) %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if @owner %>
  <%= link_to 'New Item', new_item_path(auction: @auction.id) %>
<% end %>
<%= link_to 'Back', auctions_path %>
