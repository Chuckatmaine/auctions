
   <fieldset>
     <%= f.label :title, "Item" %>
     <%= f.text_area :title %><br>
     <%= f.label :picture %>
     <%= f.file_field :picture %><br>
     <%= f.label :description %>
     <%= f.text_area :description %><br>
     <%= f.check_box :buyitnow %>
     <%= f.label :buyitnow, "Buy it now : " %>
