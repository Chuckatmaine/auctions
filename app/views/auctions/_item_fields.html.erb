     <%= f.check_box :is_donation %>
     <%= f.label :is_donation, "Is a Donation" %><br>
     <%= f.label :start_bid %>
     <%= f.text_field :start_bid %>
     <%= f.label :bid_increment %>
     <%= f.text_field :bid_increment %>
