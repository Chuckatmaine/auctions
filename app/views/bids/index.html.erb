
<%if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
<h1>Listing bids</h1>

<table>
  <thead>
    <tr>
      <th>Bid id</th>
      <th>User</th>
      <th>Item</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.id %></td>
        <td><%= bid.user_id %></td>
        <td><%= bid.item_id %></td>
        <td><%= bid.amount %></td>
        <td><%= link_to 'Show', bid %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', :back %>
