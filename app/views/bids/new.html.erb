<h1>Bidding on item: <%= @bid.item.title %></h1>
<p id="notice"><%= notice %></p>

<p>
    <%= image_tag @bid.item.picture.url(:large) %>
</p>

<p>
  <strong>Description:</strong>
  <%= @bid.item.description %>
</p>

<p>
  <strong>Auction:</strong>
  <%= @bid.item.auction.title %>
</p>

<p>
  <strong>Value:</strong>
  <%= number_to_currency(@bid.item.value) %>
</p>

<p>
  <strong>Start bid:</strong>
  <%= number_to_currency(@bid.item.start_bid) %>
</p>

<p>
  <strong>Bid increment:</strong>
  <%= number_to_currency(@bid.item.bid_increment) %>
</p>

<p>
  <strong>Is donation:</strong>
  <%= @bid.item.is_donation %>
</p>

<p>
  <strong>Buyitnow:</strong>
  <%= @bid.item.buyitnow %>
</p>

<% if @bid.item.buyitnow %>
<p>
  <strong>Buyitnow: <%= @bid.item.buyitnow %>
</strong>
</p>

<p>
  <strong>Quantity available:</strong>
  <%= @bid.item.qty %>
</p>
   <%= render 'newbuyitnow' %>
<% else %>
<% if @bid.item.is_donation %>
   <%= render 'newdonation' %>
<% else %>
   <%= render 'newbid' %>
<% end %>
<% end %>
<%= link_to 'Back to Items list', auction_items_auction_path(@bid.item.auction_id) %>
<br><br>
