
<%if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Buyitnow</th>
      <th>Quantity</th>
      <th>Start bid</th>
      <th>Bid increment</th>
      <th>Auction id</th>
      <th>Donation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= item.buyitnow %></td>
        <td><%= item.qty %></td>
        <td><%= number_to_currency(item.start_bid) %></td>
        <td><%= number_to_currency(item.bid_increment) || number_to_currency(0)%></td>
        <td><%= item.auction_id %></td>
        <td><%= item.is_donation %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item, auction: item.auction_id) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', :back %>
