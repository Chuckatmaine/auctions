<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
     <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% @seq = @item.seq %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :seq %><br>
    <%= f.number_field :seq %>
  </div>
<div class="field">
    <%= f.label :picture %><br>
    <%= f.file_field :picture %>
</div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.check_box :buyitnow %>
    <%= f.label :buyitnow, "Buy it all now : " %>
    <%= f.label :qty, "Quantity" %>
    <%= f.number_field :qty %><br>
  </div>
  <div class="field">
    <%= f.label :value, "Estimated value" %><br>
    <%= f.number_field :value %>
  </div>
  <div class="field">
    <%= f.check_box :is_donation %>
    <%= f.label :is_donation, "Is a Donation" %><br>
  </div>
  <div class="field">
    <%= f.label :start_bid %><br>
    <%= f.number_field :start_bid %>
  </div>
  <div class="field">
    <%= f.label :bid_increment %><br>
    <%= f.number_field :bid_increment, :value => 0 %>
  </div>
  <div class="field">
    <%= f.hidden_field :auction_id, :value => @auction.id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
